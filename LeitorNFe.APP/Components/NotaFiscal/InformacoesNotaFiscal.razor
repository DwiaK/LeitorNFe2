<MudDialog>
    <TitleContent>
        <MudText Style="font-size: 15px">
            Informações da Nota Fiscal
        </MudText>
        <MudDivider />
    </TitleContent>
    <DialogContent>
        @if (NotaFiscal is not null)
        {
            <MudGrid>
                <!-- Base -->
                <MudItem md="12"
                         sm="12"
                         xs="12">
                    <MudPaper Class="relative d-flex justify-end gap-4 pa-5"
                              Elevation="5">
                        <MudGrid>
                            <MudItem md="4"
                                     sm="4"
                                     xs="4">
                                <MudTextField Value="@NotaFiscal.nNF" Label="Número NF" ReadOnly="true" Style="font-size: 12px;" />
                            </MudItem>
                            <MudItem md="8"
                                     sm="8"
                                     xs="8">
                                <MudTextField Value="@NotaFiscal.chNFe" Label="Chave da Nota Fiscal" ReadOnly="true" Style="font-size: 12px;" />
                            </MudItem>
                            <MudItem md="12"
                                     sm="12"
                                     xs="12">
                                <MudTextField Value="@NotaFiscal.dhEmi" Label="Data de Emissão" ReadOnly="true" Style="font-size: 12px;" />
                            </MudItem>
                        </MudGrid>
                    </MudPaper>
                </MudItem>

                <MudItem md="6"
                         sm="6"
                         xs="6">
                    <MudPaper Class="relative d-flex justify-end gap-4 pa-5"
                              Elevation="5">
                        <MudGrid>
                            <!-- Emitente -->
                            <MudItem md="12"
                                     sm="12"
                                     xs="12" Class="py-3 mt-5">
                                <MudText Style="font-size: 18px;">
                                    Emitente
                                </MudText>
                                <MudDivider />
                            </MudItem>
                            <MudItem md="4"
                                     sm="4"
                                     xs="4">
                                <MudTextField Value="@NotaFiscal.CNPJEmit" Label="CNPJ" ReadOnly="true" Style="font-size: 12px;" />
                            </MudItem>
                            <MudItem md="8"
                                     sm="8"
                                     xs="8">
                                <MudTextField Value="@NotaFiscal.xNomeEmit" Label="Nome" ReadOnly="true" Style="font-size: 12px;" />
                            </MudItem>
                            <MudItem md="10"
                                     sm="10"
                                     xs="10">
                                <MudTextField Value="@NotaFiscal.EnderecoEmitente.xLgr" Label="Logradouro" ReadOnly="true" Style="font-size: 12px;" />
                            </MudItem>
                            <MudItem md="2"
                                     sm="2"
                                     xs="2">
                                <MudTextField Value="@NotaFiscal.EnderecoEmitente.nro" Label="Número" ReadOnly="true" Style="font-size: 12px;" />
                            </MudItem>
                            <MudItem md="6"
                                     sm="6"
                                     xs="6">
                                <MudTextField Value="@NotaFiscal.EnderecoEmitente.xBairro" Label="Bairro" ReadOnly="true" Style="font-size: 12px;" />
                            </MudItem>
                            <MudItem md="4"
                                     sm="4"
                                     xs="4">
                                <MudTextField Value="@NotaFiscal.EnderecoEmitente.xMun" Label="Município" ReadOnly="true" Style="font-size: 12px;" />
                            </MudItem>
                            <MudItem md="2"
                                     sm="2"
                                     xs="2">
                                <MudTextField Value="@NotaFiscal.EnderecoEmitente.UF" Label="UF" ReadOnly="true" Style="font-size: 12px;" />
                            </MudItem>
                            <MudItem md="12"
                                     sm="12"
                                     xs="12">
                                <MudTextField Value="@NotaFiscal.EnderecoEmitente.CEP" Label="CEP" ReadOnly="true" Style="font-size: 12px;" />
                            </MudItem>
                        </MudGrid>
                    </MudPaper>
                </MudItem>

                <MudItem md="6"
                         sm="6"
                         xs="6">
                    <MudPaper Class="relative d-flex justify-end gap-4 pa-5"
                              Elevation="5">
                        <MudGrid>
                            <!-- Destinatário -->
                            <MudItem md="12"
                                     sm="12"
                                     xs="12" Class="py-3 mt-5">
                                <MudText Style="font-size: 18px;">
                                    Destinatário
                                </MudText>
                                <MudDivider />
                            </MudItem>
                            <MudItem md="4"
                                     sm="4"
                                     xs="4">
                                <MudTextField Value="@NotaFiscal.CNPJDest" Label="CNPJ" ReadOnly="true" Style="font-size: 12px;" />
                            </MudItem>
                            <MudItem md="8"
                                     sm="8"
                                     xs="8">
                                <MudTextField Value="@NotaFiscal.xNomeDest" Label="Nome" ReadOnly="true" Style="font-size: 12px;" />
                            </MudItem>
                            <MudItem md="12"
                                     sm="12"
                                     xs="12">
                                <MudTextField Value="@NotaFiscal.EmailDest" Label="Email" ReadOnly="true" Style="font-size: 12px;" />
                            </MudItem>
                            <MudItem md="10"
                                     sm="10"
                                     xs="10">
                                <MudTextField Value="@NotaFiscal.EnderecoDestinatario.xLgr" Label="Logradouro" ReadOnly="true" Style="font-size: 12px;" />
                            </MudItem>
                            <MudItem md="2"
                                     sm="2"
                                     xs="2">
                                <MudTextField Value="@NotaFiscal.EnderecoDestinatario.nro" Label="Número" ReadOnly="true" Style="font-size: 12px;" />
                            </MudItem>
                            <MudItem md="6"
                                     sm="6"
                                     xs="6">
                                <MudTextField Value="@NotaFiscal.EnderecoDestinatario.xBairro" Label="Bairro" ReadOnly="true" Style="font-size: 12px;" />
                            </MudItem>
                            <MudItem md="4"
                                     sm="4"
                                     xs="4">
                                <MudTextField Value="@NotaFiscal.EnderecoDestinatario.xMun" Label="Município" ReadOnly="true" Style="font-size: 12px;" />
                            </MudItem>
                            <MudItem md="2"
                                     sm="2"
                                     xs="2">
                                <MudTextField Value="@NotaFiscal.EnderecoDestinatario.UF" Label="UF" ReadOnly="true" Style="font-size: 12px;" />
                            </MudItem>
                            <MudItem md="12"
                                     sm="12"
                                     xs="12">
                                <MudTextField Value="@NotaFiscal.EnderecoDestinatario.CEP" Label="CEP" ReadOnly="true" Style="font-size: 12px;" />
                            </MudItem>
                        </MudGrid>
                    </MudPaper>
                </MudItem>
            </MudGrid>
        }
    </DialogContent>
    <DialogActions>
        @* <MudButton OnClick=FecharDialog
                   Variant="Variant.Filled"
                   EndIcon="@Icons.Material.Filled.Cancel"
                   Color="Color.Error">
            Fechar
        </MudButton> *@
        <MudButton OnClick=FecharDialog>
            Fechar
        </MudButton>
    </DialogActions>
</MudDialog>