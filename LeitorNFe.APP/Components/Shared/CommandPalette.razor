<MudDialog DisableSidePadding="true">
    <DialogContent>
        <MudContainer>
            <MudTextField @bind-Value="@_busca"
                          Class="mb-1 pa-0 ma-0"
                          Style="font-size: 12px;"
                          Clearable="true"
                          Placeholder="Digite informações sobre a Nota Fiscal"
                          TextChanged="@(BuscarPaginas)"
                          Immediate="true"
                          Variant="Variant.Text"/>

            <MudList Clickable="true"
                     Style="overflow-y: auto">
                @foreach (var (key, value) in _paginasFiltradas)
                {
                    <MudListItem OnClick="@(() => Navigation.NavigateTo(value))" Style="font-size: 12px;">
                        <MudHighlighter HighlightedText="@_busca"
                                        Class="mud-primary-text"
                                        Style="background-color:transparent; font-weight:bold"
                                        Text="@key" />
                    </MudListItem>
                }
            </MudList>
        </MudContainer>
    </DialogContent>
</MudDialog>
