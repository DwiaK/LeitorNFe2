@page "/importacao/edicao/{IdNotaFiscal:int}"

@using MudBlazor.Utilities

<MudGrid>
    <MudItem md="12"
             sm="12"
             xs="12">
        <MudBreadcrumbs Separator=">"
                        Items="_items"
                        Style="font-size: 10px;"
                        Class="relative d-flex justify-end" />
    </MudItem>
</MudGrid>

<br />
<MudGrid>
    <MudItem md="5"
             sm="5">
        <MudPaper Class="justify-space-between pa-4"
                  Elevation="2"
                  Style="min-height: 350px;">
            <MudItem md="12"
                     sm="12"
                     xs="12">

                <MudText Class="my-5 align-center d-flex flex-column justify-center"
                         Typo="Typo.subtitle2">
                    Informações Nota Fiscal: @NotaFiscal.nNF
                </MudText>
            </MudItem>
        </MudPaper>
    </MudItem>
</MudGrid>
