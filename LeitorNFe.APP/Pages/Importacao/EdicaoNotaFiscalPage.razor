@page "/importacao/edicao/{IdNotaFiscal:int}"

@using MudBlazor.Utilities

<MudGrid>
    <MudItem md="12"
             sm="12"
             xs="12">
        <MudBreadcrumbs Separator=">"
                        Items="_items"
                        Style="font-size: 10px;"
                        Class="relative d-flex justify-end" />
    </MudItem>
</MudGrid>

<br />
<MudGrid>
    <MudItem md="12"
             sm="12">
        <MudPaper Elevation="2">
            <!-- Dados Base da NF -->
            <MudContainer Style="height: 200px;">
                <MudGrid>
                    <MudItem md="4"
                             sm="4">
                        <MudText>
                            Número da Nota Fiscal:
                        </MudText>
                    </MudItem>
                    <MudItem md="8"
                             sm="8">
                        <MudTextField @bind-Value="@NotaFiscal.nNF"
                                      AutoFocus=true
                                      Class="mb-1 pa-0 ma-0"
                                      Style="font-size: 12px;"
                                      Clearable="true"
                                      Placeholder="Número da Nota Fiscal"
                                      Immediate="true"
                                      Variant="Variant.Text" />
                    </MudItem>
                </MudGrid>
            </MudContainer>
        </MudPaper>
    </MudItem>
    <MudItem md="6"
             sm="6">
        <MudPaper Elevation="2">
            <!-- Dados Emitente -->
            <MudContainer Style="height: 200px;">
                <MudGrid>
                    <MudItem md="12"
                             sm="12">
                        <MudTextField @bind-Value="@NotaFiscal.xNomeEmit"
                                      AutoFocus=true
                                      Class="mb-1 pa-0 ma-0"
                                      Style="font-size: 12px;"
                                      Clearable="true"
                                      Placeholder="Número do Emitente"
                                      Immediate="true"
                                      Variant="Variant.Text" />
                    </MudItem>
                </MudGrid>
            </MudContainer>
        </MudPaper>
    </MudItem>
    <MudItem md="6"
             sm="6">
        <MudPaper Elevation="2">
            <!-- Dados Destinatário -->
            <MudContainer Style="height: 200px;">
                <MudGrid>
                    <MudItem md="12"
                             sm="12">
                        <MudTextField @bind-Value="@NotaFiscal.xNomeDest"
                                      AutoFocus=true
                                      Class="mb-1 pa-0 ma-0"
                                      Style="font-size: 12px;"
                                      Clearable="true"
                                      Placeholder="Número do Destinatário"
                                      Immediate="true"
                                      Variant="Variant.Text" />
                    </MudItem>
                </MudGrid>
            </MudContainer>
        </MudPaper>
    </MudItem>

    <MudItem md="12"
             sm="12"
             xs="12">
        <div class="relative d-flex justify-end gap-4 pa-2">
            <MudButton OnClick=CancelarEdicao
                       Variant="Variant.Filled"
                       EndIcon="@Icons.Material.Filled.Cancel"
                       Color="Color.Error">
                Cancelar
            </MudButton>
            <MudButton OnClick=SalvarEdicao
                       Variant="Variant.Filled"
                       EndIcon="@Icons.Material.Filled.Save"
                       Color="Color.Primary">
                Salvar
            </MudButton>
        </div>
    </MudItem>

</MudGrid>




