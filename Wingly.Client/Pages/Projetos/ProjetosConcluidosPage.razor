@page "/meus-projetos/concluidos"

<MudText Class="align-center" Typo="Typo.h6">Meus Projetos</MudText>
<MudBreadcrumbs Separator=">" Items="_items"></MudBreadcrumbs>

<br />
<MudContainer>
    <MudPaper Class="pa-16 ma-2">
        <MudGrid>
            @foreach (var deck in listaDeckMock)
            {
                <MudItem md="3"
                         sm="3">
                    <MudCard Elevation="5">
                        <MudCardMedia Image="@deck.Image" Height="100" />
                        <MudCardContent>
                            <MudText Typo="Typo.h5">@deck.Title</MudText>
                            <MudText Typo="Typo.body2">@deck.Text</MudText>
                        </MudCardContent>
                        <MudCardActions Style="justify-content: center;">
                            <MudToolBar DisableGutters="true">
                                <MudIconButton Icon="@Icons.Material.Outlined.Edit" Color="Color.Primary" Class="mx-2" />
                                <MudSpacer />
                                <MudIconButton Icon="@Icons.Material.Outlined.Delete" Color="Color.Error" Class="mx-2" />
                            </MudToolBar>
                        </MudCardActions>
                    </MudCard>
                </MudItem>
            }
        </MudGrid>
    </MudPaper>
</MudContainer>

@code {
    #region Breadcrumbs
    private List<BreadcrumbItem> _items = new List<BreadcrumbItem>
    {
        new BreadcrumbItem("Meus Projetos", href: "/"),
        new BreadcrumbItem("Concluídos", href: null, disabled: true)
    };
    #endregion

    #region MOCK
    private readonly List<Deck> listaDeckMock = new()
    {
        new Deck{ Image = "https://img.freepik.com/premium-photo/notepad-with-goals-inscription-keyboard_218381-14481.jpg?size=626&ext=jpg&ga=GA1.1.1412446893.1704931200&semt=ais", Title = "Projeto 1", Text = "Texto Projeto 1" },
        new Deck{ Image = "https://img.freepik.com/premium-photo/notepad-with-goals-inscription-keyboard_218381-14481.jpg?size=626&ext=jpg&ga=GA1.1.1412446893.1704931200&semt=ais", Title = "Projeto 2", Text = "Texto Projeto 2" },
    };
    #endregion

    public class Deck
    {
        public string? Image { get; set; }
        public string? Title { get; set; }
        public string? Text { get; set; }
    }
}